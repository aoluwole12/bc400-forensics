{
  "name": "bc400-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/api.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/api.ts",
    "devindexer": "ts-node-dev --respawn --transpile-only src/indexer.ts",
    "devbackfill": "ts-node-dev --respawn --transpile-only src/backfill.ts",
    "devserver": "ts-node-dev --respawn --transpile-only src/api.ts",
    "build": "tsc",
    "start": "npm run build && node dist/api.js",
    "indexer": "npm run build && node dist/indexer.js",
    "backfill": "npm run build && node dist/backfill.js",
    "rebuild-holders": "npx psql \"$DATABASE_URL\" -f sql/rebuild_holder_balances.sql"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "ethers": "^6.11.1",
    "express": "^4.19.2",
    "pg": "^8.11.3",
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}